# Server Configuration
PORT=8080
NODE_ENV=development

# Database Configuration (PostgreSQL)
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=furniture_ecom
DB_HOST=localhost

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# CORS Configuration
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001

# SMS API Configuration (ADN SMS)
SMSAPI=https://portal.adnsms.com/api/v1/secure/send-sms
ADN_API_KEY=your_adn_api_key_here
ADN_API_SECRET=your_adn_api_secret_here

# Redis Configuration (if using Redis for caching/sessions)
REDIS_URL=redis://localhost:6379

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# Payment Gateway Configuration (add as needed)
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
# PAYPAL_CLIENT_ID=your_paypal_client_id
# PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Email Configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
