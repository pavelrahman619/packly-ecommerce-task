        "type": "text/javascript",
        "exec": [
          "// Set up environment variables if needed",
          "if (!pm.environment.get(\"baseUrl\")) {",
          "    pm.environment.set(\"baseUrl\", \"http://localhost:8080\");",
          "}"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Global test script for all requests",
          "pm.test(\"Status code is in 200-299 range\", function () {",
          "    pm.expect(pm.response.code).to.be.within(200, 299);",
          "});",
          "",
          "// Auto-save auth token from login",
          "if (pm.request.url.getPath().includes('/api/auth/login') && pm.response.code === 200) {",
          "    const response = pm.response.json();",
          "    if (response.token) {",
          "        pm.environment.set('authToken', response.token);",
          "        console.log('Auth token saved to environment');",
          "    }",
          "}"
        ]
      }
    }
